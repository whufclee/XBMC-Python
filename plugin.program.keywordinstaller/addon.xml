<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.keywordinstaller" name="Keyword Installer" provider-name="whufclee" version="0.1">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">noobsandnerds Keyword Installer</summary>
	<description>Content that can be installed by simply typing in a keyword. Simple, effective and extremely powerful!</description>
    <platform>all</platform>
  </extension>
</addon>
